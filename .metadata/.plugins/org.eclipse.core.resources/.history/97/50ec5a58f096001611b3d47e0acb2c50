package PowerUP;

import java.awt.Image;
import java.awt.Rectangle;

import javax.swing.Icon;
import javax.swing.ImageIcon;
import javax.swing.JLabel;

import Logica.Componente;

public abstract class Power extends Componente{
	
	protected Icon graf;
	
	public Power(){
		imagen= new Icon[6];
	}
	
	public JLabel getGrafico(int i, int x, int y){
		if (label == null){
			label= new JLabel();
			label.setBounds(x, y, ancho, altura);
			rec = new Rectangle(x,y,ancho,altura);
            ImageIcon aux=(ImageIcon) imagen[i]; 
     	    Icon icono = new ImageIcon(aux.getImage().getScaledInstance(label.getWidth(), label.getHeight(), Image.SCALE_DEFAULT));
     	   label.setIcon(icono);
        }
	  return label;
	}

}
