package Obstaculos;
import Logica.*;
import Visitor.*;

import java.awt.Image;
import java.awt.Rectangle;

import javax.swing.Icon;
import javax.swing.ImageIcon;
import javax.swing.JLabel;
import javax.swing.JPanel;

public abstract class Obstaculo extends Componente implements Elemento {

  protected Icon graf;
  protected Mapa m;
	
	 public Obstaculo(){
		 label= new JLabel();  
		 ancho=25;
		 altura=25;
		
		  
	  }
	    
	 
	 public void set(JPanel panelMapa,int x,int y){
	    	label.setBounds(x, y, ancho, altura);
	    	rec = new Rectangle(x,y,ancho,altura);
	        ImageIcon aux=(ImageIcon) graf;
	 	    Icon icono = new ImageIcon(aux.getImage().getScaledInstance(label.getWidth(), label.getHeight(), Image.SCALE_DEFAULT));
	 	    label.setIcon(icono);
	 	    insertar(panelMapa,label,rec);
			
		}
	 
	 
	 
   public abstract String getNombre();
   
   public abstract Icon getIcon();
   
   public JLabel getGrafico(){
	   return label;
   }
  
   		
 }




